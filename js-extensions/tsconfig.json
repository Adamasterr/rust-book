{
  "compilerOptions": {
      // Type-checker options
      "strict": true,
      "skipLibCheck": true,

      // Codegen options
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["es2020", "dom"],
      "module": "ES2020",
      "moduleResolution": "Node",
      "target": "ES2020",

      // Output file options
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,

      // Add puppeteer types for tests
      "types": [
        "puppeteer",
        "jest-environment-puppeteer",
        "expect-puppeteer"
      ]
  },
}
